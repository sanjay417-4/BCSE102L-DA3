#include<stdio.h>

struct Book{
    int pages;
    char author[100];
    char title[200];
    long int ISBN;
};

Book highest_pages(Book *books,int no_of_books){
    int max=0;
    int index;
    for(int i=0;i<no_of_books;i++){
        if(books[i].pages>max){
            max=books[i].pages;
            index=i;
        }
    }
    return books[index];
}

